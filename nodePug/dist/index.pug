doctype html

html(lang="fr")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Pug Template Engine in Node
        link(rel="stylesheet", href="css/index.css")
    body
        include includes/vars

        case pass.lang 
            when "fr"
                include includes/fr_texts
            when "gb"
                include ./includes/gb_texts
            default 
                include ./includes/fr_texts
        
        h1 #{title}
        .container 
            h2 #{subTitle}
            hr
            p !{desc}
            h3 #{exemple1}
            article 
                p= '<!DOCTYPE html>'
                br
                p= '<html>'
                p= '<head>'
                p= '<title>Exemple</title>'
                p= '</head>'
                p= '<body>'
                br
                p(style="color: #00f")= '<?php'
                p(style="color: #f00") 
                    span(style="color: #070") echo 
                    = '"Bonjour, je suis un script PHP !";'
                p(style="color: #00f")= '?>'
                br
                p= '</body>'
                p= '</html>'
            p #{line2}
            p #{line3}
            p #{line4}
            p #{line5}

